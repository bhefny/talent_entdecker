<!-- Portfolio Grid -->
<section class="bg-light" id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase"><%= t('.title') %></h2>
        <h3 class="section-subheading text-muted"><%= t('.subtitle') %></h3>
      </div>
    </div>
    <div class="row">
      <% @technologies.each do |tech| %>
      <div class="col-md-3 col-6 portfolio-item">
        <a class="portfolio-link" data-toggle="modal" href="#<%= "modal_#{tech}" %>">
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fas fa-plus fa-3x"></i>
            </div>
          </div>
          <svg viewBox="0 0 128 128"><path fill="#<%= t(".#{tech}.color") %>" d="<%= t(".#{tech}.svg") %>"></path></svg>
        </a>
        <div class="portfolio-caption">
          <p class="text-muted">"<%= t(".#{tech}.quote") %>"</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
